{
  "name": "artep-pos",
  "version": "2.0.0",
  "main": "index.js",
  "description": "",
  "author": "dlucianop31",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "jspdf": "^3.0.0",
    "jspdf-autotable": "^5.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^33.4.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.artep.pos",
    "productName": "artep-POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "package.json",
      "html/**/*",
      "css/**/*",
      "js/**/*",
      "img/**/*",
      "db/data-artep.db",
      "icon.ico"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
